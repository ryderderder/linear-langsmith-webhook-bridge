# LangSmith Configuration
# Get these from your LangSmith Agent Builder settings
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_API_URL=https://your-agent-url.langsmith.com
LANGSMITH_AGENT_ID=your_agent_id_here

# Linear Configuration
# Get the signing secret from Linear webhook settings
LINEAR_SIGNING_SECRET=your_linear_signing_secret_here

# Optional: Filter which Linear events trigger the agent
# Comma-separated list of event types (e.g., Issue,Comment,Project)
# Leave empty to process all events
LINEAR_EVENT_FILTER=Issue,Comment

# Security
# Optional: Add an additional secret token for webhook authentication
# This will be checked as a query parameter: /webhook/linear?token=YOUR_TOKEN
WEBHOOK_SECRET_TOKEN=your_random_secret_token_here

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=production

# Flask Settings
SECRET_KEY=your_flask_secret_key_here

# Server Port (optional, defaults to 8080)
PORT=8080
